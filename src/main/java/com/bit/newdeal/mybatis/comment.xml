<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="com.bit.newdeal.dao.commentDao">
  
  	<select id="selectComment" parameterType="int" resultType="Comment">
  	
  	</select>
  	
  	<select id="mySelectComment" parameterType="String" resultType="Comment">
  		select c.cContent, c.writeDate, b.title
		from comment c join board b
		where c.bno = b.bno
		and mid = #{id}
  	</select>
  	
  	<insert id="insertComment" parameterType="Comment">
  	
  	</insert>
  	
  	<update id="updateComment" parameterType="Comment">
  	
  	</update>
  
  </mapper>